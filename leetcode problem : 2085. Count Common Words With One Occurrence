2085. Count Common Words With One Occurrence

/*

*/

class Solution {
public:
    int countWords(vector<string>& words1, vector<string>& words2) {
      unordered_map<string,int> first,second;
        
        int count = 0;
        for(string &s:words1)
        first[s]++;
        for(string &s:words2)
            second[s]++;
        for(string &s: words1)
        {
            if(second.find(s)!=second.end())
                if(second[s]==1&&first[s]==1)
                    count++;
        }
        return count;
    }
};
