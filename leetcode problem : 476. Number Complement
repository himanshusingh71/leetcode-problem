476. Number Complement

/*
Runtime: 3 ms, faster than 29.62% of C++ online submissions for Number Complement.
Memory Usage: 6 MB, less than 43.74% of C++ online submissions for Number Complement.
*/

class Solution {
public:
    int findComplement(int num) {
        
        int i=0,ans = 0;
       while(num>0)
       {
           if( !(num & 1) )
               ans += pow(2,i);
           num >>=1;
           i++;
               
       }
        return ans;
    }
};
