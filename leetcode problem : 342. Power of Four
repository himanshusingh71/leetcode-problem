342. Power of Four

/*
Runtime: 0 ms, faster than 100.00% of C++ online submissions for Power of Four.
Memory Usage: 5.8 MB, less than 88.86% of C++ online submissions for Power of Four.
*/

class Solution {
public:
    bool isPowerOfFour(int n) {
        if(n<=0)
            return false;
      while(n>0)
      {
          if(n==1)
              return true;
          if(n%4!=0)
              return false;
          n= n/4;
      }
        return true;
    }
};
